<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <%= image_tag product.product_image if product.product_image.present? %>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Stock:</strong>
    <%= product.stock %>
  </p>

  <p>
    <strong>Size:</strong>
    <%= product.size %>
  </p>

  <p>
    <strong>Size measurment:</strong>
    <%= product.size_measurment %>
  </p>

  <p>
    <strong>Sku:</strong>
    <%= product.sku %>
  </p>

  <p>
    <strong>Is active:</strong>
    <%= product.is_active %>
  </p>

  <p>
    <strong>On sale:</strong>
    <%= product.on_sale %>
  </p>

  <p>
    <strong>Catagory:</strong>
    <%= Catagory.find(product.catagory_id).name %>
  </p>

</div>
